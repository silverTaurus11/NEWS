<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/silver"
    android:layout_height="match_parent">

    <include layout="@layout/filter_layout"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/top_headline_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:dividerHeight="0dp"
        tools:listitem="@layout/news_preview_item"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/status_message_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Sedang Mencari, Harap tunggu..."
        android:gravity="center"
        android:textColor="@color/darkNavy"/>

</LinearLayout>